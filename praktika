import os
from lxml import etree
ai_list=[]
parser=etree.XMLParser(remove_comments=True,recover=True,attribute_defaults=True,dtd_validation=True,load_dtd=True)
def lib(xmlFile):
    lib={}
    lib[xmlFile.getroot()]=lib_chil(xmlFile.getroot())  
    return lib

def lib_chil(chil):
    lib={}
    if chil.getchildren() != ai_list :
        for child_root in chil:
            lib_elem=lib_chil(child_root)
            lib[etree.QName(child_root.tag).localname]=lib_elem
    else:
        return chil.text
    return lib
fails=[]
fails=os.listdir("training")
for i in fails:
    with open("training/"+i) as fobj:
        xml = etree.parse(fobj,parser)
    print(lib(xml))
    print('\n111111111111111111111')